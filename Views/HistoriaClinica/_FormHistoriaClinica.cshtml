@model TurnosMedicos.Models.HistoriaClinica


<div class="mb-3">
    <label asp-for="IdPaciente" class="form-label"></label>
    <select asp-for="IdPaciente" asp-items="ViewBag.Pacientes" class="form-control"></select>
    <span asp-validation-for="IdPaciente" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="IdMedico" class="form-label"></label>
    <select asp-for="IdMedico" asp-items="ViewBag.Medicos" class="form-control"></select>
    <span asp-validation-for="IdMedico" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="FechaRegistro" class="form-label"></label>
    <input asp-for="FechaRegistro" type="date" class="form-control" />
    <span asp-validation-for="FechaRegistro" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Descripcion" class="form-label"></label>
    <textarea asp-for="Descripcion" class="form-control"></textarea>
    <span asp-validation-for="Descripcion" class="text-danger"></span>
</div>
