@model IEnumerable<TurnosMedicos.Models.HistoriaClinica>
@{
    ViewData["Title"] = "Historias Clínicas";
    var esAdmin = User.IsInRole("Admin");
    var esMedico = User.IsInRole("Medico");
    var esPac = User.IsInRole("Paciente");

    // Si querés ocultar botones al médico cuando NO es el dueño, descomentá esto:
    var medicoIdClaim = User.FindFirst("MedicoId")?.Value;
    int? medicoIdUsuario = int.TryParse(medicoIdClaim, out var midTmp) ? midTmp : (int?)null;
}

<h2>@ViewData["Title"]</h2>

@if (esAdmin || esMedico)
{
    <a asp-action="Crear" class="btn btn-success mb-3">Agregar Historia Clínica</a>
}

<table class="table table-bordered table-striped datatable">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Paciente</th>
            <th>Médico</th>
            <th>Fecha Registro</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.IdHistoria</td>
                <td>@h.Paciente?.Nombre @h.Paciente?.Apellido</td>
                <td>@h.Medico?.Nombre @h.Medico?.Apellido</td>
                <td>@h.FechaRegistro.ToShortDateString()</td>
                <td>@h.Descripcion</td>
                <td>
                    @* Admin siempre puede *@
                    @if (esAdmin)
                    {
                        <a asp-action="Editar" asp-route-id="@h.IdHistoria" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Borrar" asp-route-id="@h.IdHistoria" class="btn btn-danger btn-sm">Eliminar</a>
                    }

                    @* Médico: puede ABM. Si querés restringir a “solo sus historias”, activá el if de ownership *@
                    @if (esMedico /* && medicoIdUsuario.HasValue && h.IdMedico == medicoIdUsuario.Value */)
                    {
                        <a asp-action="Editar" asp-route-id="@h.IdHistoria" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Borrar" asp-route-id="@h.IdHistoria" class="btn btn-danger btn-sm">Eliminar</a>
                    }

                    @* Paciente: sin botones *@
                </td>
            </tr>
        }
    </tbody>
</table>
