@model IEnumerable<TurnosMedicos.Models.Tratamiento>
@{
    ViewData["Title"] = "Tratamientos";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Crear" class="btn btn-success mb-3">Agregar Tratamiento</a>

<table class="table table-bordered table-striped datatable">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Paciente</th>
            <th>Descripción</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.IdTratamiento</td>
                <td>@t.IdPaciente</td>
                <td>@t.Descripcion</td>
                <td>@t.FechaInicio.ToShortDateString()</td>
                <td>@(t.FechaFin.HasValue? t.FechaFin.Value.ToShortDateString() : "")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.IdTratamiento" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@t.IdTratamiento" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
