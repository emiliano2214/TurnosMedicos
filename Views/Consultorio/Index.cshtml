@model IEnumerable<TurnosMedicos.Models.Consultorio>

@{
    ViewData["Title"] = "Consultorios";
    var esAdmin = User.IsInRole("Admin");
    var esAdm = User.IsInRole("Administrativo");
    var esStaff = esAdmin || esAdm;
}

<h2>@ViewData["Title"]</h2>

@if (esStaff)
{
    <a asp-action="Crear" class="btn btn-success mb-3">Agregar Consultorio</a>
}

<table class="table table-bordered table-striped datatable">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Número</th>
            <th>Ubicación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.IdConsultorio</td>
                <td>@c.Numero</td>
                <td>@c.Ubicacion</td>
                <td>
                    @if (esStaff)
                    {
                        <a asp-action="Editar" asp-route-id="@c.IdConsultorio" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Borrar" asp-route-id="@c.IdConsultorio" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
