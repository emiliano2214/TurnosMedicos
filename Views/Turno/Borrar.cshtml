@model TurnosMedicos.Models.Turno
@{
    ViewData["Title"] = "Eliminar Turno";
}

<h2 class="text-danger">¿Eliminar Turno?</h2>

<div class="alert alert-warning mt-3 mb-4">
    <p>
        ¿Estás seguro de eliminar el turno de
        <strong>@(Model.Paciente != null ? Model.Paciente.Nombre + " " + Model.Paciente.Apellido : $"Paciente #{Model.IdPaciente}")</strong>
        con
        <strong>@(Model.Medico != null ? Model.Medico.Nombre + " " + Model.Medico.Apellido : $"Médico #{Model.IdMedico}")</strong>
        el día <strong>@Model.FechaHora.ToString("g")</strong>?
    </p>
</div>

<form asp-action="Borrar" method="post">

    <input type="hidden" asp-for="IdTurno" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
