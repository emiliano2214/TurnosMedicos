@model IEnumerable<TurnosMedicos.Models.Turno>

@{
    ViewData["Title"] = "Turnos";
    var esAdmin = User.IsInRole("Admin");
    var esAdm = User.IsInRole("Administrativo");
    var esMedico = User.IsInRole("Medico");
    var esPac = User.IsInRole("Paciente");
    var esStaff = esAdmin || esAdm;
}

<h2>@ViewData["Title"]</h2>

@if (esStaff || esPac)
{
    <div class="mb-3 d-flex gap-2">
        <a asp-action="Crear" class="btn btn-success">Agregar Turno</a>
        @* Quitado: botón Solicitar Turno (Procedimiento) *@
    </div>
}

<table class="table table-bordered table-striped datatable">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Paciente</th>
            <th>Médico</th>
            <th>Fecha y Hora</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.IdTurno</td>
                <td>@(t.Paciente != null ? t.Paciente.Nombre + " " + t.Paciente.Apellido : "No asignado")</td>
                <td>@(t.Medico != null ? t.Medico.Nombre + " " + t.Medico.Apellido : "No asignado")</td>
                <td>@t.FechaHora.ToString("g")</td>
                <td>@t.Estado</td>
                <td class="d-flex flex-wrap gap-1">
                    @* ---- ADMIN / ADMINISTRATIVO ---- *@
                    @if (esStaff)
                    {
                        <a asp-action="Editar" asp-route-id="@t.IdTurno" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Borrar" asp-route-id="@t.IdTurno" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                    @* ---- MÉDICO ---- *@
                    else if (esMedico)
                    {
                        <a asp-action="Editar" asp-route-id="@t.IdTurno" class="btn btn-warning btn-sm">Actualizar Estado</a>
                    }
                    @* ---- PACIENTE ---- *@
                    else if (esPac)
                    {
                        if (t.FechaHora > DateTime.Now)
                        {
                            <a asp-action="Borrar" asp-route-id="@t.IdTurno" class="btn btn-danger btn-sm">Cancelar</a>
                        }
                    }

                    @* 🔹 Comprobante para cualquiera de los roles *@
                    <a asp-action="Comprobante" asp-route-id="@t.IdTurno" class="btn btn-info btn-sm">Comprobante</a>
                </td>
            </tr>
        }
    </tbody>
</table>
