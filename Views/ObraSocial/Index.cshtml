@model IEnumerable<TurnosMedicos.Models.ObraSocial>
@{
    ViewData["Title"] = "Obras Sociales";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Crear" class="btn btn-success mb-3">Agregar Obra Social</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Plan</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.IdObraSocial</td>
                <td>@o.Nombre</td>
                <td>@o.Plan</td>
                <td>@o.Telefono</td>
                <td>@o.Email</td>
                <td>@o.Direccion</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@o.IdObraSocial" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Borrar" asp-route-id="@o.IdObraSocial" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
