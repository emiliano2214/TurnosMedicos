@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registro";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h2 id="external-login-title" class="text-center">
    Asociá tu cuenta de @Model.ProviderDisplayName
</h2>
<hr />

<p id="external-login-description" class="text-info text-center">
    Te autenticastes correctamente con <strong>@Model.ProviderDisplayName</strong>.<br />
    Ingresá tu correo electrónico abajo y hacé clic en <strong>Registrar</strong> para completar el inicio de sesión.
</p>

<div class="row justify-content-center">
    <div class="col-md-5">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Ingresá tu correo electrónico" />
                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
