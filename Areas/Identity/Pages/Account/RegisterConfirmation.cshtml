@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmación de registro";
}

<div class="container mt-4">
    <h1 class="mb-3">@ViewData["Title"]</h1>

    @if (Model.DisplayConfirmAccountLink)
    {
        <div class="alert alert-warning">
            <p>
                Esta aplicación no tiene actualmente un servicio de envío de correo configurado.
                Consultá <a href="https://aka.ms/aspaccountconf" target="_blank">esta documentación</a>
                para configurar un servicio real de envío de emails.
            </p>

            <p class="mt-3">
                Normalmente este enlace se enviaría por correo electrónico.<br />
                <a id="confirm-link"
                   class="btn btn-success mt-2"
                   href="@Model.EmailConfirmationUrl">
                    Hacé clic aquí para confirmar tu cuenta
                </a>
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>
                Por favor revisá tu correo electrónico para confirmar tu cuenta.
            </p>
        </div>
    }
</div>
