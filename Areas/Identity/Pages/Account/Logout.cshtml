@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<header class="text-center mt-5">
    <h1>@ViewData["Title"]</h1>

    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline mt-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Hacé clic aquí para cerrar sesión
                </button>
            </form>
        }
        else
        {
            <p class="text-success mt-3">
                Cerraste sesión exitosamente.
            </p>
        }
    }
</header>
